<Window x:Class="Telefonkönyv.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="146" Width="400">
	<Grid Margin="10">
		<StackPanel>
			<TextBlock Text="Felhasználónév:"/>
			<TextBox x:Name="UsernameTextBox" Width="200"/>
			<TextBlock Text="Jelszó:" Margin="0,10,0,0"/>
			<PasswordBox x:Name="pwdPasswordBox" Width="200"/>
			<Button Content="Bejelentkezés" Click="LoginButton_Click" Margin="0,10,0,0" Width="100"/>
		</StackPanel>
	</Grid>
</Window>
