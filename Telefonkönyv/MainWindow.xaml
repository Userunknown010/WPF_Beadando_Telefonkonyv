<Window x:Class="Telefonkönyv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telefonkönyv"
        mc:Ignorable="d"
        Title="Telefonkönyv" Height="450" Width="870">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.ColumnSpan="2"
                     Grid.Column="0" 
                     Grid.Row="0" 
                     Height="30" 
                     Margin="0,0,0,0" 
                     Text="Keresés" 
                     TextChanged="SearchBox_TextChanged" 
                     VerticalContentAlignment="Center"/>

            <ListView x:Name="PhoneBookList" 
                      Grid.ColumnSpan="2"
                      Grid.Row="1" 
                      Grid.Column="0" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      SelectionChanged="PhoneBookList_SelectionChanged">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Name}" Width="230"/>
                        <GridViewColumn Header="Város" DisplayMemberBinding="{Binding City.CityName}" Width="200"/>
                        <GridViewColumn Header="Telefonszám" DisplayMemberBinding="{Binding PhoneNumber}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Gyors felvétel" 
                    Grid.Row="2" 
                    Grid.Column="0" 
                    Width="180" 
                    Height="40" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="center"
                    Margin="0,0,0,10" 
                    Click="Button_Click"/>
            <Button Content="Új felvétel" 
                    Grid.Row="2" 
                    Grid.Column="1" 
                    Width="180" 
                    Height="40" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="center"
                    Margin="0,0,0,10" 
                    Click="Button_Click_1"/>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Regisztráció" 
                        Width="120" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0" 
                        Grid.Column="0"
                        Click="RegistrationMenuButton_Click"/>

                <Button Content="Belépés" 
                        Width="110" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0" 
                        Grid.Column="1"
                        Click="LoginMenuButton_Click"/>
            </Grid>
            
            

            <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="5,10,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Kijelentkezés" 
                        Width="120" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0" 
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Click="Button_Click_3"/>

                <Image  x:Name="sideImage"
                        Source="pack://application:,,,/images/placeholder.png"
                        HorizontalAlignment="Center"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center" 
                        Grid.Row="1"/>

                <Label Content="Név:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="top" 
                       Grid.Row="2"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           x:Name="sideName"
                           HorizontalAlignment="center" 
                           VerticalAlignment="top" 
                           Grid.Row="2"
                           Grid.Column="1"/>


                <Label Content="Becenév:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="Center" 
                       Grid.Row="2"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           x:Name="sideNickname"
                           HorizontalAlignment="center" 
                           VerticalAlignment="Center" 
                           Grid.Row="2"
                           Grid.Column="1"/>

                <Label  Content="Tel.:" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        HorizontalAlignment="left" 
                        VerticalAlignment="Bottom" 
                        Grid.Row="2"
                        Grid.Column="0"/>
                <TextBlock  Text="" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            x:Name="sideTel"
                            HorizontalAlignment="center" 
                            VerticalAlignment="Bottom" 
                            Grid.Row="2"
                            Grid.Column="1"/>

                <Label Content="Irsz:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="Top" 
                       Grid.Row="3"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           x:Name="sideIrsz"
                           HorizontalAlignment="center" 
                           VerticalAlignment="Top" 
                           Grid.Row="3"
                           Grid.Column="1"/>

                <Label Content="Város:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="Center" 
                       Grid.Row="3"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           x:Name="sideCity"
                           HorizontalAlignment="center" 
                           VerticalAlignment="Center" 
                           Grid.Row="3"
                           Grid.Column="1"/>

                <Label Content="Email:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="Bottom" 
                       Grid.Row="3"
                       Grid.Column="0"/>
                <TextBlock  Text="" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            x:Name="sideEmail"
                            HorizontalAlignment="center" 
                            VerticalAlignment="Bottom" 
                            Grid.Row="3"
                            Grid.Column="1"/>

                <Label Content="Megjegyzés:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="top" 
                       Grid.Row="4"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           Margin="0,5,0,0"
                           FontSize="16" 
                           TextWrapping="Wrap"
                           FontWeight="Bold" 
                           x:Name="sidedesc"
                           HorizontalAlignment="center" 
                           VerticalAlignment="top" 
                           Grid.Row="4"
                           Grid.Column="1"/>
                <Button  Content="Módosítás" 
                         Width="100" 
                        Height="30" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                         Grid.Row="5"
                         Click="Button_Click_2" />
                    <Button  Content="Törlés" 
                     Width="100" 
                    Height="30" 
                    Grid.Column="1"
                    x:Name="Törlés"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                     Grid.Row="5"
                    Click="Törlés_Click" />
                
            </Grid>
        </Grid>
    </Grid>
</Window>
