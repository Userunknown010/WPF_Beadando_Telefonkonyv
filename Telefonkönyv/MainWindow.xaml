<Window x:Class="Telefonkönyv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telefonkönyv"
        mc:Ignorable="d"
        Title="Telefonkönyv" Height="450" Width="820">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="590"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox" 
                     Grid.Column="0" 
                     Grid.Row="0" 
                     Height="30" 
                     Margin="0,0,0,0" 
                     Text="Keresés" 
                     TextChanged="SearchBox_TextChanged" 
                     VerticalContentAlignment="Center"/>

            <ListView x:Name="PhoneBookList" 
                      Grid.Row="1" 
                      Grid.Column="0" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Name}" Width="230"/>
                        <GridViewColumn Header="Város" DisplayMemberBinding="{Binding City}" Width="200"/>
                        <GridViewColumn Header="Telefonszám" DisplayMemberBinding="{Binding Phone}" Width="160"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Új bejegyzés felvétele" 
                    Grid.Row="1" 
                    Grid.Column="1" 
                    Width="180" 
                    Height="40" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,10" 
                    Click="Button_Click"/>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Regisztráció" 
                        Width="80" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0" 
                        Grid.Column="0"
                        Click="RegistrationMenuButton_Click"/>

                <Button Content="Belépés" 
                        Width="70" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0" 
                        Grid.Column="1"
                        Click="LoginMenuButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
