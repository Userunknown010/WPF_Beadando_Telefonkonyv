<Window x:Class="Telefonkönyv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telefonkönyv"
        mc:Ignorable="d"
        Title="Telefonkönyv" Height="450" Width="870">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="590*"/>
                <ColumnDefinition Width="270*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox" 
                     Grid.Column="0" 
                     Grid.Row="0" 
                     Height="30" 
                     Margin="0,0,0,0" 
                     Text="Keresés" 
                     TextChanged="SearchBox_TextChanged" 
                     VerticalContentAlignment="Center"/>

            <ListView x:Name="PhoneBookList" 
                      Grid.Row="1" 
                      Grid.Column="0" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      SelectionChanged="PhoneBookList_SelectionChanged">
                       
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Name}" Width="230"/>
                        <GridViewColumn Header="Város" DisplayMemberBinding="{Binding City}" Width="200"/>
                        <GridViewColumn Header="Telefonszám" DisplayMemberBinding="{Binding Phone}" Width="160"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Új bejegyzés felvétele" 
                    Grid.Row="2" 
                    Grid.Column="0" 
                    Width="180" 
                    Height="40" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="center"
                    Margin="0,0,0,10" 
                    Click="Button_Click"/>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Regisztráció" 
                        Width="120" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0" 
                        Grid.Column="0"
                        Click="RegistrationMenuButton_Click"/>

                <Button Content="Belépés" 
                        Width="110" 
                        Height="30" 
                        HorizontalAlignment="center" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0" 
                        Grid.Column="1"
                        Click="LoginMenuButton_Click"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Image  Source="pack://application:,,,/images/placeholder.png"
                        HorizontalAlignment="Center"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center" 
                        Grid.Row="0"/>

                <Label Content="Név:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="top" 
                       Grid.Row="1"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           x:Name="sideName"
                           HorizontalAlignment="center" 
                           VerticalAlignment="top" 
                           Grid.Row="1"
                           Grid.Column="1"/>

                <Label Content="Város:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="Center" 
                       Grid.Row="1"
                       Grid.Column="0"/>
                <TextBlock Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           x:Name="sideCity"
                           HorizontalAlignment="center" 
                           VerticalAlignment="Center" 
                           Grid.Row="1"
                           Grid.Column="1"/>


                <Label Content="Tel.::" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        HorizontalAlignment="left" 
                        VerticalAlignment="Bottom" 
                        Grid.Row="1"
                        Grid.Column="0"/>
                <TextBlock  Text="" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            x:Name="sideTel"
                            HorizontalAlignment="center" 
                            VerticalAlignment="Bottom" 
                            Grid.Row="1"
                            Grid.Column="1"/>


            </Grid>
        </Grid>
    </Grid>
</Window>
