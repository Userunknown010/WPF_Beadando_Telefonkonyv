<Window x:Class="Telefonkönyv.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Felhasználónév:"/>
            <TextBox x:Name="UsernameTextBox" Width="200"/>

            <TextBlock Text="Jelszó:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>

            <TextBlock Text="Jelszó újra:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBoxConfirm" Width="200"/>

            <Button Content="Regisztróció" 
                    Width="100" 
                    Margin="0,10,0,0"
                    Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
