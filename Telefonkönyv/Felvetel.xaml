<Window x:Class="Telefonkönyv.Felvetel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telefonkönyv"
        mc:Ignorable="d"
        Title="Új bejegyzés felvétele" Height="250" Width="400">
    <Grid>
        <Grid x:Name="Tagfelvetel" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="270"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--
            <Grid.Resources>
                <Style TargetType="{x:Type TextBox}">
                    
                </Style>
            </Grid.Resources> -->

            <!-- Név -->
            <Label Content="Név:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
            <TextBox x:Name="nevbe" Grid.Row="0" Grid.Column="1" BorderBrush="Black" Margin="5" BorderThickness="2" VerticalContentAlignment="Center"/>
            
            <!-- Város -->
            <Label Content="Város:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
            <TextBox x:Name="varosbe" Grid.Row="1" Grid.Column="1" BorderBrush="Black" Margin="5" BorderThickness="2" VerticalContentAlignment="Center"/>
            
            <!-- Telefonszám -->
            <Label Content="Telefonszám:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
            <TextBox x:Name="telefonszambe" Grid.Row="2" Grid.Column="1" BorderBrush="Black" Margin="5" BorderThickness="2" VerticalContentAlignment="Center"/>

            <!-- Hozzzáad gomb -->
            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,6,0">
                <Button x:Name="Hozzaadgomb" Width="100" Height="30" Click="Hozzaadgomb_Click" Content="Hozzáadás" Margin="0,0,110,0"/>
                <Button x:Name="Elvetgomb" Width="50" Height="30" Click="Elvetgomb_Click" Content="Elvetés"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
