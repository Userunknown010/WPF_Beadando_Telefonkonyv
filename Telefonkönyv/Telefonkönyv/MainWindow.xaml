<Window x:Class="Telefonkönyv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telefonkönyv"
        mc:Ignorable="d"
        Title="Telefonkönyv" Height="450" Width="820">
    <Grid>
        <DockPanel Margin="10">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="0,0,0,10" Width="590" HorizontalAlignment="Left">
                <TextBox x:Name="SearchBox" Height="30" Margin="0,0,0,0" Text="Keresés" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>

            <Grid>
                <ListView x:Name="PhoneBookList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Name}" Width="230"/>
                            <GridViewColumn Header="Város" DisplayMemberBinding="{Binding City}" Width="200"/>
                            <GridViewColumn Header="Telefonszám" DisplayMemberBinding="{Binding Phone}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            
            <Button Width="169" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10, 10, 10, 0" Click="Button_Click">
                <Label Content="Új bejegyzés felvétele" FontSize="15" FontWeight="Bold"/>
            </Button>
        </DockPanel>
    </Grid>
</Window>
